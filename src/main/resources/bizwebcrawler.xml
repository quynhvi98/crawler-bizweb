<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <!--- Person -->
    <bean id="person" class="com.higgsup.bizwebcrawler.entites.customer.Person"/>
    <bean id="customer" class="com.higgsup.bizwebcrawler.entites.customer.Customer"/>
    <!---Product -->
    <bean id="categoryProduct" class="com.higgsup.bizwebcrawler.entites.product.CategoryProduct"></bean>
    <bean id="producer" class="com.higgsup.bizwebcrawler.entites.product.Producer"></bean>
    <bean id="product" class="com.higgsup.bizwebcrawler.entites.product.Product"><property ref="producer" name="producer"></property><property
            name="productGroup" ref="productGroup"></property></bean>
    <bean id="productCategory" class="com.higgsup.bizwebcrawler.entites.product.ProductCategory"/>
    <bean id="productGroup" class="com.higgsup.bizwebcrawler.entites.product.ProductGroup"/>
    <!--- -->
    <!---Order-->
    <bean id="orderObject" class="com.higgsup.bizwebcrawler.entites.order.Order"></bean>
    <bean id="orderProductObject" class="com.higgsup.bizwebcrawler.entites.order.OrderAddress"></bean>
    <bean id="orderAddressObject" class="com.higgsup.bizwebcrawler.entites.order.OrderProduct"></bean>
    <!--- -->
    <bean id="scheduling" class="com.higgsup.bizwebcrawler.controller.scheduling.StartScheduling"></bean>
    <!--- -->
    <context:property-placeholder order="1" location="classpath:application.properties" ignore-unresolvable="true"/>
    <import resource="datasource.xml"/>
    <context:component-scan base-package="com.higgsup.bizwebcrawler"/>
</beans>