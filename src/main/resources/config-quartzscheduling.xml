<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:component-scan base-package="com.higgsup.bizwebcrawler.services.scheduling" />

    <bean id="simpleJobCustomer" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="queryingCustomerInformation" />
        <property name="targetMethod" value="startScheduling" />
    </bean>
    <bean id="simpleTriggerCustomer"  class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="simpleJobCustomer" />
        <property name="startDelay" value="1000" />
        <property name="repeatInterval" value="2000" />
    </bean>

    <bean id="simpleJobOrder" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="queryingOrderInformation" />
        <property name="targetMethod" value="startScheduling" />
    </bean>
    <bean id="simpleTriggerOrder"  class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="simpleJobOrder" />
        <property name="startDelay" value="1000" />
        <property name="repeatInterval" value="30000" />
    </bean>

    <bean id="simpleJobProduct" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="startScheduling" />
        <property name="targetMethod" value="startScheduling" />
    </bean>
    <bean id="simpleTriggerProduct"  class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="simpleJobProduct" />
        <property name="startDelay" value="1000" />
        <property name="repeatInterval" value="200000" />
    </bean>

    <bean  class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="jobDetails">
            <list>

                <ref bean="simpleJobProduct" />
            </list>
        </property>

        <property name="triggers">
            <list>

                <ref bean="simpleTriggerProduct" />

            </list>
        </property>
    </bean>
</beans>